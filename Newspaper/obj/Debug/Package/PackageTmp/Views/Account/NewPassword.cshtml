@model Newspaper.Models.ViewModel.PasswordConform

<div class="container">
    <div class="row">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="text-center">
                            <h3><i class="fa fa-lock fa-5x"></i></h3>
                            <h2 class="text-center">Change Password?</h2>

                            <div class="panel-body">

                                @using (Html.BeginForm("NewPassword", "Account", FormMethod.Post))
                                {
                                    <fieldset>
                                        <div class="form-group">
                                            <div class="col-sm-10">
                                                New Password:
                                                @*<span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>*@
                                                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", id = "todo", type = "password" })

                                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                                @*<input id="EmailId" placeholder="email address" class="form-control" type="email">*@
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-sm-10">
                                                @*<span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>*@
                                                ConformPassword

                                                @Html.TextBoxFor(model => model.ConformPassword, new { @class = "form-control", id = "todo", type = "password" })
                                                @Html.ValidationMessageFor(model => model.ConformPassword, "", new { @class = "text-danger" })

                                                @*<input id="EmailId" placeholder="email address" class="form-control" type="email">*@
                                            </div>
                                        </div>
                                        <br>
                                        <div class="form-group">
                                            <input class="btn btn-lg btn-primary btn-block" value="Change Password" type="submit">
                                        </div>
                                    </fieldset>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery.min.js"></script>
<script src="~/Scripts/jquery.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<link href="~/Content/bootstrap.css " rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
