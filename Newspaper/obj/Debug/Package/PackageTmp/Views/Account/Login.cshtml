@model Newspaper.Models.ViewModel.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/bootstrap/css/bootstrap-responsive.min.css" rel="stylesheet" />
    <link href="~/css/theme.css" rel="stylesheet" />
</head>
<body>
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")"></script>

    <style>
        span.field-validation-error {
            color: red;
        }

        #Password {
            position: relative;
        }

        #input {
            height: 20px;
            margin: 0;
            padding-right: 0px;
            width: 100%;
        }

        #input_img {
            position: absolute;
            bottom: 7px;
            right: 10px;
            width: 15px;
            height: 15px;
        }
    </style>






    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-inverse-collapse">
                    <i class="icon-reorder shaded"></i>
                </a>

                <a class="brand" href="@Url.Action("Login","Account")">
                    
                    <img src="~/img/logo.gif" width="125" height="90"/>
                </a>

                <div class="nav-collapse collapse navbar-inverse-collapse">

                    <ul class="nav pull-right">





                        <li>
                            <a href="@Url.Action("ForgetPassword","Account")">
                                Forgot your password?
                            </a>
                        </li>
                        @*<a href="~/User Manual for Gorkhapatra distributed manual system.pdf"><i class="fa-question-circle"></i>  Help</a>*@
                        <li>
                            <a href="~/Manual/User Manual for GDMS.pdf" target="_blank" class="button3"><i class="fa fa-question-circle"></i>Help</a>
                           

                        </li>
                    </ul>
                </div><!-- /.nav-collapse -->
            </div>
        </div><!-- /navbar-inner -->
    </div><!-- /navbar -->



    <div class="wrapper">
        <div class="container">
            <div class="row">
                <div class="module module-login span4 offset4">
                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary(true)





                        <div class="form-vertical">
                            <div class="module-head">
                                <h3>Sign In</h3>
                            </div>

                            <div class="module-body">
                                @if (ViewBag.ERRmsg != null)
                                {
                                    <div class="alert alert-danger">@ViewBag.ERRmsg</div>
                                }

                                @if (ViewBag.Errormsg != null)
                                {
                                    <div class="alert alert-danger">@ViewBag.Errormsg </div>
                                }
                                <div class="control-group">
                                    <div class="controls row-fluid">
                                        @Html.TextBoxFor(model => model.UserName, new { @class = "span12", @placeHolder = "Username/Email", id = "txtUser", required = "required" })
                                        @Html.ValidationMessageFor(model => model.UserName)
                                    </div>
                                </div>

                                <div class="control-group">
                                    <div id="Password">
                                        <div class="controls row-fluid">
                                            @Html.PasswordFor(model => model.Password, new { @class = "span12", @placeHolder = "Password", id = "myPassword", required = "required" })

                                            <img src=" ~/img/eye1.jpg" id="input_img" onmouseover="mouseoverPass();" onmouseout="mouseoutPass();">
                                        </div>
                                    </div>
                                </div>
                                <br />
                                @*<div class="editor-label">
                                        @Html.LabelFor(model => model.RememberMe)
                                    </div>
                                    <div class="editor-field">
                                        @Html.EditorFor(model => model.RememberMe)
                                        @Html.ValidationMessageFor(model => model.RememberMe)
                                    </div>*@

                            </div>
                            <div class="module-foot">
                                <div class="control-group">
                                    <div class="controls clearfix">
                                        <button type="submit" class="btn btn-primary pull-right" id="btnSubmit">Login</button>
                                        <h2 style="color:red">@ViewBag.Message</h2>

                                    </div>
                                </div>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
    <div class="footer">
        <div class="container">
            <b class="copyright">&copy;<a href="http://dibugsoft.com/">  Debugsoft </a></b>All rights reserved.
        </div>
    </div>
    <!--/.wrapper-->


    <script src="~/scripts/jquery-1.9.1.min.js" type="text/javascript"></script>
    <script src="~/scripts/jquery-ui-1.10.1.custom.min.js" type="text/javascript"></script>
    <script src="~/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
