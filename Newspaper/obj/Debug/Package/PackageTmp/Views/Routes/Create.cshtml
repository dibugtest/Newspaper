@model Newspaper.Models.Route

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



@using (Html.BeginForm("Create", "Routes", FormMethod.Post))
{
    @Html.AntiForgeryToken()
<div class="col-md-6 col-md-offset-2">


    @Html.ValidationSummary(true)
    <br />
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h1 class="panel-title">
                <center>
                    <h4>
                        रुट सिर्जना गर्नुहोस्
                    </h4>
                </center>
            </h1>
        </div>

        <div class="panel-body">
            @if (ViewBag.message != null)
            {
                <div class="sucess">@ViewBag.message</div>
            }

            <div class="col-md-4">
                <div class="form-group">
                    <label>रुट Id</label>

                    @Html.TextBoxFor(model => model.RouteId, new { @class = " form-control nepalifont", style = "font-size:20px;" })
                    @Html.ValidationMessageFor(model => model.RouteId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-5">
                <div class="form-group">
                    <label>रुटको नाम</label>

                    @Html.TextBoxFor(model => model.RouteName, new { @class = " form-control nepalifont", style = "font-size:20px;" })
                    @Html.ValidationMessageFor(model => model.RouteName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-4 col-md-10">
                    <input type="submit" value="थप्नुहोस" class="btn btn-primary" />
                </div>
            </div>

        </div>
        
    </div>
    <div>
        @Html.ActionLink("Back to List", "Index", "Routes", new { @class = "btn btn-success" })
    </div>
</div>
}



