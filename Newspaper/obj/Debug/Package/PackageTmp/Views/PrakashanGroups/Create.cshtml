@model Newspaper.Models.PrakashanGroup

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Create", "PrakashanGroups", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="col-md-6 col-md-offset-2">
       
        
        @Html.ValidationSummary(true)
        <br />
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h1 class="panel-title">
                    <center>
                        <h4>
                            एजेन्ट ग्रुप सिर्जना गर्नुहोस्
                        </h4>
                    </center>
                </h1>
            </div>

            <div class="panel-body">
                @if (ViewBag.message != null)
                {
                    <div class="sucess">@ViewBag.message</div>
                }


                <div class="col-md-4">
                    <div class="form-group">
                        <label>एजेन्ट ग्रुप ID</label>




                        @Html.TextBoxFor(model => model.GroupId, new { @class = " form-control nepalifont", style = "font-size:20px;" })
                        @Html.ValidationMessageFor(model => model.GroupId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br/>
                <div class="col-md-9">
                    <div class="form-group">
                        <label>एजेन्ट ग्रुपको नाम</label>

                        @Html.TextBoxFor(model => model.GroupName, new { @class = "form-control nepalifont", style = "font-size:20px;", required = "required" })
                        @Html.ValidationMessageFor(model => model.GroupName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-4 col-md-10">
                        <input type="submit" value="थप्नुहोस" class="btn btn-primary"  />
                    </div>
                </div>
            </div>
        </div>

    </div>
}

