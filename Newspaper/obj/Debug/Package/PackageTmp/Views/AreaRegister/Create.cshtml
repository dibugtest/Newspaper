@model Newspaper.Models.ViewModel.AreaRegister

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<script src="~/Themes/ckfull/ckeditor.js"></script>

<style>
    fieldset {
        display: block;
        margin-left: 2px;
        margin-right: 2px;
        padding-top: 0.35em;
        padding-bottom: 0.625em;
        padding-left: 0.75em;
        padding-right: 0.75em;
        border: 2px solid black;
    }

    legend {
        width: auto;
        border: 1.5px solid black;
    }
</style>


@using (Html.BeginForm("Create", "AreaRegister", FormMethod.Post))
{
    @Html.AntiForgeryToken()



