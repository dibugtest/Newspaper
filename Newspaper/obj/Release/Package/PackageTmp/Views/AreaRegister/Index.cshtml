@model IEnumerable<Newspaper.Models.ViewModel.AreaRegister>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    table {
        border-collapse: collapse;
        width: 100%;
        border: 1px solid #tdd;
    }

    th, td {
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }
</style>



<br />

<div class="panel panel-primary">
    <div class="panel-heading">
        <h1 class="panel-title"><center><h4>  क्षेत्र निर्धारण  </h4></center></h1>
    </div>

    <div class="panel-body">
        <div style="overflow-x:auto;">
            <table class="table table-bordered">
                <tr>
                    <th>
                        आइडी
                    </th>
                    <th>
                        पुरा नाम
                    </th>
                    <th>
                       क्षेत्र 
                    </th>


                    <th>कार्य</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Id
                        </td>
                        <td class="nepalifont" style="font-size:20px;">
                            @Html.DisplayFor(modelItem => item.SaleMan.FullName)
                        </td>
                        <td class="nepalifont" style="font-size:20px;">
                            @Html.DisplayFor(modelItem => item.Area)
                        </td>


                        <td>
                            @Html.ActionLink("अद्यावधिक ", "Edit", new { id = item.Id }, new { @class = "btn btn-primary", title = "Edit Area Register" }) |
                            @Html.ActionLink("पुरा हेर्नुहोस ", "Details", new { id = item.Id }, new { @class = "btn btn-info", title = "Show Area Register Details" })
                            @*@Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })*@
                            @*@Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger", onclick = "return confirm('Are you sure you wish to delete this article?');" })*@
                        </td>
                    </tr>
                }

            </table>
        </div>
        </div>
    
    </div>
<div class="col-md-offset-5">
    @Html.ActionLink("नया क्षेत्रनिर्धारण", "Create", "AreaRegister", new { @class = "btn btn-primary", title = "Create New Area Register" })
