@model Newspaper.Models.Service

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
</style>
@using (Html.BeginForm("Edit", "Service", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
@Html.AntiForgeryToken()



<br />

@Html.ValidationSummary(true)
@Html.HiddenFor(model => model.Id)

<div class="panel panel-primary">
    <div class="panel-heading">
        <h1 class="panel-title"><center><h4> अद्यावधिक पत्रिका  </h4></center></h1>
    </div>

    <div class="panel-body">

        <div class="col-md-5">
            <div class="form-group">
                <label>पत्रपत्रिका नम्बर</label>
                @Html.ValidationMessageFor(model => model.ServiceCode, "", new { @class = "text-danger" })

                @Html.TextBoxFor(model => model.ServiceCode, new { @class = "nepalifont form-control", style = "font-size:20px;" })

            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                <label>पत्रिकाको नाम</label>
                @Html.ValidationMessageFor(model => model.NewsPaperName, "", new { @class = "text-danger" })

                @Html.TextBoxFor(model => model.NewsPaperName, new { @class = "nepalifont form-control", style = "font-size:20px;" })

            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                <label>समय आधार</label>
                @Html.ValidationMessageFor(model => model.TimeBase)

                @Html.DropDownList("TimeBase", new List<SelectListItem> { new SelectListItem() { Text = "--समयतालिका  छान्नुहोस्--", Value = "" }, new SelectListItem() { Text = "दैनिक ", Value = "दैनिक " }, new SelectListItem() { Text = "साप्ताहिक ", Value = "साप्ताहिक " }, new SelectListItem() { Text = "मासिक  ", Value = "मासिक" } }, new { @class = "form-control" })

            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label>पत्रीकाको तस्बिर</label>
                @Html.ValidationMessageFor(model => model.Images)

                @*<img src="@Url.Content(Model.PPSizePhoto)" width="150" height="150" />
                    <input type="file" name="ImageFile" id="ImageFile" />*@
                <input type="file" name="ImageFile" id="ImageFile" onchange="readURL(this)" class="form-control" />
                <img id="blah" src="@Url.Content(Model.Images)" alt="image" width="100" height="50" />


            </div>
        </div>




        <div class="form-group">
            <div class="col-md-offset-5 col-md-10">
                <input type="submit" value="अद्यावधिक" class="btn btn-primary" />
            </div>
        </div>
    </div>
</div>


}

<p>
    @Html.ActionLink("सबै पत्रिकाहरु", "Index", new { id = Model.Id }, new { @class = "btn btn-primary" })
</p>

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery-ui-1.10.1.custom.min.js"></script>

    <link href="~/css/jquery-ui.css" rel="stylesheet" />
    <script type="text/javascript">
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {

                    $('#blah')
                        .attr('src', e.target.result);
                };

                reader.readAsDataURL(input.files[0]);
            }
        }



        $(document).ready(function () {


        });
    </script>

}