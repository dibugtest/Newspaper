@model Newspaper.Models.Officer

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    fieldset {
        display: block;
        margin-left: 2px;
        margin-right: 2px;
        padding-top: 0.35em;
        padding-bottom: 0.625em;
        padding-left: 0.75em;
        padding-right: 0.75em;
        border: 2px solid black;
    }

    legend {
        width: auto;
        border: 1.5px solid black;
    }
</style>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}
@using (Html.BeginForm("Create", "Officer", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true)

    <br />
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h1 class="panel-title">
                <center>
                    <h4>
                        कर्मचारी दर्ता गर्नुहोस्
                    </h4>
                </center>
            </h1>
        </div>

        <div class="panel-body">
            @if (ViewBag.message != null)
            {
                <div class="sucess">@ViewBag.message</div>
            }

            <div class="col-md-3">
                <div class="form-group">
                    <label>
                        PIS No
                    </label>


                    @Html.ValidationMessageFor(model => model.PISNo, "", new { @class = " text-danger" })

                    @Html.TextBoxFor(model => model.PISNo, new { @class="form-control nepalifont", style = "font-size:20px;" })

                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label>
                        पुरा नाम<font style="color:red;">*</font>

                    </label>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                    @Html.TextBoxFor(model => model.Name, new { @class="nepalifont form-control", id = "txtFirstName", style = "font-size:20px;", @required = "full name required" })

                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label>अफिस ठेगाना</label>
                    @Html.ValidationMessageFor(model => model.OfficeAddress, "", new { @class = "text-danger" })

                    @Html.TextBoxFor(model => model.OfficeAddress, new { @class="nepalifont form-control", style = "font-size:20px;" })

                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label>फोन नम्बर </label> @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })

                    @Html.TextBoxFor(model => model.Phone, new { @class="nepalifont form-control", id = "txtMPhone", type = "phoneNumber", style = "font-size:20px;" })

                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label>
                        पद
                    </label>
                    @Html.ValidationMessageFor(model => model.Designation, "", new { @class = "text-danger" })

                    @Html.TextBoxFor(model => model.Designation, new { @class="nepalifont form-control", style = "font-size:20px;" })

                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label>
                        इमेल
                    </label>
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                    @Html.TextBoxFor(model => model.Email, new { @class="form-control" })

                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label>प्रकार<font style="color:red;">*</font></label>
                    @Html.ValidationMessageFor(model => model.OfficerType, "", new { @class = "text-danger" })

                    @Html.DropDownList("OfficerType",null,
                                                    new { @class="form-control", id = "ddlOfficerType" })


                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label>
                        Status
                    </label><br />
                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                    @Html.RadioButton("Status", true) Active
                    @Html.RadioButton("Status", false) Retired
                </div>
            </div>


            <div class="form-group">

                <div class="col-md-10 col-md-offset-5">
                    <input type="submit" value="थाप्नुहोस" class="btn btn-info" id="btnSubmit" onclick="validate()" />
                </div>

            </div>

        </div>
    </div>

}
@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery-ui-1.10.1.custom.min.js"></script>

    <script type="text/javascript">


        $(document).ready(function () {


        });
    </script>
}



