@model Newspaper.Models.Admin

@{
    ViewBag.Title = "CreateAdmin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    <style>
        fieldset {
            display: block;
            margin-left: 2px;
            margin-right: 2px;
            padding-top: 0.35em;
            padding-bottom: 0.625em;
            padding-left: 0.75em;
            padding-right: 0.75em;
            border: 2px solid black;
        }

        legend {
            width: auto;
            border: 1.5px solid black;
        }
    </style>
}



@using (Html.BeginForm("CreateAdmin", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true)

    <br/>
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h1 class="panel-title"><center><h4>व्यवस्थापक </h4></center></h1>
        </div>

        <div class="panel-body">

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
            }


            <div class="col-md-6">
                <div class="form-group">
<label>कर्मचारी आइडी
</label>
                  @Html.ValidationMessageFor(model => model.EmployeeId, "", new { @class = "text-danger" })
                    @Html.TextBoxFor(model => model.EmployeeId, new { @class = "form-control" })

                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label> पुरा नाम</label>
                 @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                    @Html.TextBoxFor(model => model.FullName, new { id = "txtFullName", @class = "form-control", name = "FullName", value = "" })

                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>इमेल</label>
                  @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    @Html.TextBoxFor(model => model.Email, new { id = "txtEmail", @class = "form-control", name = "Email", value = "" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>प्रयोगकर्ताको नाम
</label>
                   @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

                    @Html.TextBoxFor(model => model.UserName, new { id = "txtUserName", @class = "form-control" })

                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>पासवोर्ड</label>
                  @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                    @Html.PasswordFor(model => model.Password, new { id = "txtPassword", @class = "form-control" })

                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>फोन नं</label>
                   @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })

                    @Html.TextBoxFor(model => model.Phone, "", new { id = "txtPhone", @class = "form-control" })

                </div>
            </div>

            <div class="col-md-6" id="divCategory" >
                <div class="form-group">
                    <label>वर्ग</label>
                 @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })


                    @Html.DropDownList("Category", new List<SelectListItem>() { new SelectListItem() { Text = "--Select Category--", Value = "" }, new SelectListItem() { Text = "Super Admin", Value = "SuperAdmin" }, new SelectListItem() { Text = "Supervisor", Value = "Supervisor" }, new SelectListItem() { Text = "Admin", Value = "Admin" }, new SelectListItem() { Text = "Accountant", Value = "Accountant" }, new SelectListItem() { Text = "Counter", Value = "Counter" } }, new { @class = "form-control", id = "ddlCategory" })

                </div>
            </div>
            @*<div class="col-md-3" id="divBranch">
                <div class="form-group">
                    <label>साखा आइडी</label>
                   @Html.ValidationMessageFor(model => model.BranchId, "", new { @class = "text-danger" })

                    @Html.DropDownList("BranchId", null, "---Select Branch---", htmlAttributes: new { @class = "form-control" })

                </div>
            </div>*@
            <div class="col-md-6">
                <div class="form-group">
                    <label>कार्यालयको नं
</label>
                   @Html.ValidationMessageFor(model => model.WorkPhone)

                    @Html.TextBoxFor(model => model.WorkPhone, new { @class = "form-control" })

                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.URL)  @Html.ValidationMessageFor(model => model.URL)

                    @Html.TextBoxFor(model => model.URL, new { @class = "form-control" })

                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>pp आकारको फोटो</label>
                 @Html.ValidationMessageFor(model => model.PPSizePhoto)

                    <input type="file" name="ImageFile" id="ImageFile" onchange="readURL(this);" class="form-control" />
                    <img id="blah" src="#" alt="your image" />
                </div>
            </div>


            <div class="col-md-2">
                <div class="form-group">
                    <label>स्थिति
</label>
                @Html.ValidationMessageFor(model => model.Status)

                    &nbsp;
                    @Html.CheckBoxFor(model => model.Status, new { style = "width: 20px; height: 20px;", @class = "form-control" })

                </div>
            </div>


            <center>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-8">
                        <input type="submit" value="व्यवस्थापक थप्नुहोस " class="btn btn-info" id="btnSubmit" onclick="validate()" title="Create Admin" />
                    </div>

                </div>
            </center>

        </div>
    </div>

}




@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery-ui-1.10.1.custom.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-sweetalert/1.0.1/sweetalert.css" />
    <script src=" https//cdnjs.cloudflare.com/ajax/libs/bootstrap-sweetalert/1.0.1/sweetalert.js">       </script>
    <link href="~/css/jquery-ui.css" rel="stylesheet" />
    <script type="text/javascript">

            function readURL(input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();

                    reader.onload = function (e) {
                        $('#blah').show();
                        $('#blah')
                            .attr('src', e.target.result)
                            .width(100)
                            .height(100);
                    };

                    reader.readAsDataURL(input.files[0]);
                }
            }


        //$("#divBranch").hide();
       
        //$("#ddlCategory").change(function () {

        //    $("#divBranch").show();
        //    if ($(this).val() === "Admin") {
        //        $("#divBranch").show();
                
        //    } else {
        //        $("#divBranch").hide();

               
        //    }
        //});
        $(document).ready(function () {
            $('#blah').hide();

            $('#txtModifiedDate').datepicker();
            $("#btnSubmit").click(function () {
                var fullname = $('#txtFullName').val();
                var email = $('#txtEmail').val();
                var username = $('#txtUserName').val();
                var password = $('#txtPassword').val();
                var phone = $('#txtPhone').val()

                if (fullname == "") {
                    swal("Fill the required field!", "Create failed!", "error");
                }
                else if (email == "") {
                    swal("Fill the required field!", "Create failed!", "error");
                }
                else if (username == "") {
                    swal("Fill the required field!", "Create failed!", "error");
                }
                else if (password == "") {
                    swal("Fill the required field!", "Create failed!", "error");
                }
                else if (phone == "") {
                    swal("Fill the required field!", "Create failed!", "error");
                }
                else {
                    swal("Customer created!", "Create Sucessfully", "success");
                }

            });
        });

    </script>

    <script>
        function validate() {
            if (document.getElementById("FullName").value == "") {
                alert("Full name may not be blank");
            } else if (document.getElementById("Email").value == "") {
                alert("Email may not be blank.");
            }
        }
    </script>
}
