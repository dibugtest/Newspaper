@model Newspaper.Models.ViewModel.ChangePasswordViewModel

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-md-7 col-lg-offset-3">



    <div class="panel panel-primary">
        <div class="panel-heading">
            <h1 class="panel-title"><center><h4>Change password </h4></center></h1>
        </div>

        <div class="panel-body">


            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)

                if (ViewBag.Message != null)
                {
                    <div class="alert alert-success">@ViewBag.Message</div>
                }

                if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                }

                <div class="row">
                    <div class="col-md-6 col-lg-offset-3">
                        <div class="form-group">
                            <label>Old Password</label>@Html.ValidationMessageFor(model => model.OldPassword)

                            @Html.PasswordFor(model => model.OldPassword, new { @class = "form-control", @Required = true})
                            
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 col-lg-offset-3">
                        <div class="form-group">
                           <label>New Password</label>@Html.ValidationMessageFor(model => model.NewPassword)


                            @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control" })
                            
                        </div>
                    </div>
                </div>

                    <div class="row">
                        <div class="col-md-6 col-lg-offset-3">
                            <div class="form-group">
                                <label>Confirm New Password</label>@Html.ValidationMessageFor(model => model.ConfirmNew)


                                @Html.PasswordFor(model => model.ConfirmNew,new { @class ="form-control"})
                                
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 col-lg-offset-3">
                        <button type="submit" class="btn btn-primary" name="cmd"><i class="fa fa-check"></i>&nbsp;Change Password</button>
                        </div>
                        }



                        <div>
                        </div>
                    </div>
    </div>
</div>

