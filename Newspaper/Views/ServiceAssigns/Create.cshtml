@model Newspaper.Models.ViewModel.assignNewspaperVM

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div>
    <br />
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h1 class="panel-title"><center><h4> ग्राहक नियुक्त गर्दै </h4></center></h1>
        </div>


        <div class="panel-body">


          
            @if (!ViewData.ModelState.IsValid)
            {
                    @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
            }


                    <div class="col-md-3">
                        <div class="form-group">
                            <label>
                                ग्राहक आईडी
                            </label>
                            @Html.ValidationMessageFor(model => model.CustomerId, "", new { @class = "text-danger" })

                            @Html.EditorFor(model => model.custId, new { htmlAttributes = new { @class = "nepalifont form-control", style = "font-size:20px;", @readonly = "readonly" } })

                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label> पत्रिका वितरण सुरू मिति</label>
                            @Html.ValidationMessageFor(model => model.NepaliDate, "", new { @class = "text-danger" })

                            @Html.TextBoxFor(model => model.NepaliDate, new { id = "txtNepaliDate", @class = "form-control" })

                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">

                            <label>पत्रिकाको नाम</label> @Html.ValidationMessageFor(model => model.NewspaperId, "", new { @class = "text-danger" })

                            @Html.DropDownListFor(model => model.NewspaperId, Model.Newspapers, "5fGg'xf];", htmlAttributes: new { @class = "nepalifont form-control", style = "font-size:20px;" })

                        </div>
                    </div>


                    <div class="col-md-3">
                        <div class="form-group">

                            <label>परिमाण </label> @Html.ValidationMessageFor(model => model.NewspaperId, "", new { @class = "text-danger" })

                            @Html.TextBoxFor(model => model.Quantity, "1", new { @class = "form-control", value = "1" })

                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">

                            <label>वितरकको नाम</label> @Html.ValidationMessageFor(model => model.NewspaperId, "", new { @class = "text-danger" })

                            @Html.DropDownList("SalesManId", Model.Salesmans, "5fGg'xf];", htmlAttributes: new { @class = "nepalifont form-control", style = "font-size:20px;" })

                        </div>
                    </div>



                    <div class="col-md-3">
                        <div class="form-group">
                            <label>अवधि</label>
                            @Html.ValidationMessageFor(model => model.Duration, "", new { @class = "text-danger" })
                          
                                @Html.DropDownList("Duration", new List<SelectListItem>() { new SelectListItem() { Text = "--छान्नुहोस् --", Value = "" }, new SelectListItem() { Text = "मासिक ", Value = "30" }, new SelectListItem() { Text = "त्रेमासिक", Value = "90" }, new SelectListItem() { Text = "चौमासिक ", Value = "120" }, new SelectListItem() { Text = "अर्ध बार्षिक", Value = "182" }, new SelectListItem() { Text = "बार्षिक ", Value = "365" }, new SelectListItem() { Text = "२ बर्ष", Value = "730" }, new SelectListItem() { Text = "३ बर्ष", Value = "1095" }, new SelectListItem() { Text = "४ बर्ष", Value = "1460" }, new SelectListItem() { Text = "५ बर्ष", Value = "1825" } }, new { @class = "form-control", id = "ddlProvience" })
                            
                        </div>
                    </div>
                    @Html.HiddenFor(m => m.PaperDispatchDate, new { id = "txtPaperDispatchDate" })
                    @Html.HiddenFor(m => m.CreatedBy, new { id = "txtcreatedby" })
                    @Html.HiddenFor(m => m.UpdatedBy, new { id = "txtupdatedby" })
                    @Html.HiddenFor(m => m.CreatedDate, new { id = "txtcreateddate" })
                    @Html.HiddenFor(m => m.UpdatedDate, new { id = "txtupdateddate" })
                    @Html.HiddenFor(m => m.status, new { id = "txtstatus" })
                    @Html.HiddenFor(m => m.CustomerId)


                    <div class="form-group">

                        <div class="col-md-10 col-md-offset-5">
                            <input type="submit" value="नियुक्ति गर्नुहोस" class="btn btn-info" />
                        </div>
                    </div>
                </div>
        </div>
    </div>
    
        }



        @section Scripts {
            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/jqueryval")
            <script src="~/Scripts/jquery-ui-1.10.1.custom.min.js"></script>
            <link href="~/css/jquery-ui.css" rel="stylesheet" />
            <link href="~/bootstrap/nepali.datepicker.v2.2.min.css" rel="stylesheet" />
            <script src="~/bootstrap/nepali.datepicker.v2.2.min.js"></script>

            <script type="text/javascript">


                $(document).ready(function () {

                    $('#txtNepaliDate', 'body').nepaliDatePicker({

                        onChange: function () {
                            $('#txtNepaliDate').val();
                            $('#txtPaperDispatchDate').val(BS2AD($('#txtNepaliDate').val()));
                        },
                        npdMonth: true,
                        npdYear: true
                    }
                    );



                });





            </script>
        }

